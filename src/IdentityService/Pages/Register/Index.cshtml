@page
@model IdentityService.Pages.Register.Index

<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        @* @if (Model.View.EnableLocalLogin)
        { *@
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Register</h2>
                </div>

                <div class="card-body">
                    <form asp-page="/Register/Index">
                        <input type="hidden" asp-for="Input!.ReturnUrl" />

                        <div class="form-group> 
                                <label asp-for=" Input.Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Input!.Username" autofocus>
                            <label asp-for="Input!.Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Input!.Password"
                                autocomplete="off">
                            <label asp-for="Input!.Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Input!.Email" autofocus>
                            <label asp-for="Input!.FullName"></label>
                            <input class="form-control" placeholder="Full Name" asp-for="Input!.FullName" autofocus>

                            @* <label asp-for="Input.ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" autocomplete="off"> *@
                            <button class="btn btn-primary" name="Input.Button" value="register">Register</button>
                            <button class="btn btn-secondary" name="Input.Button" value="cancel">Cancel</button>
                        </div>
                    </form>
                </div>
                @if (Model.RegisterSuccess)
                {
                    <div class="alert alert-success mt-2" role="alert">
                        <strong>Registration successful.</strong> Please check your email to confirm your account.
                    </div>
                }
            </div>
        </div>
        @* } *@
    </div>
</div>